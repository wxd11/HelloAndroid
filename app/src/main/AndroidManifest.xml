<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="activity.wxd.helloandroid.helloandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="nju.wxd.helloAndroid.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nju.wxd.helloAndroid.activity.SecondActivity">
            <intent-filter>
                <action android:name="activity.wxd.ACTION_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="nju.wxd.helloAndroid.activity.ThirdActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="nju.wxd.helloAndroid.activity.DialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name="nju.wxd.helloAndroid.activity.SingleActivity"
            android:launchMode="singleTop"
            />
    </application>

</manifest>